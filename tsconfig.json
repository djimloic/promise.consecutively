{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "pretty": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tmp", "**/*.spec.ts"]
}
