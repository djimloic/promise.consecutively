{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES5",
    "module": "commonjs",
    "lib": [
      "es5",
      "dom",
      "es2015.promise",
      "es2015.collection",
      "es2015.iterable"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tmp", "**/*.spec.ts"]
}
